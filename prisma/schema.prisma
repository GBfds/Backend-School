generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Professor{
  id String @id @default(uuid())
  nome String
  telefone String
  email String @unique
  cpf String @unique

  materias Materia[]

  @@map("professores")
}

model Materia{
  id String @id @default(uuid())
  nome String
  //slug
  dt_inicio DateTime
  dt_fim DateTime
  carga_horaria Int

  professor Professor @relation(fields: [id_professor],references: [id])
  id_professor String


  @@map("materias")
}

model Aluno{
  id String @id @default(uuid())
  nome String
  telefone String @db.VarChar(11)
  email String @unique 
  cpf String @unique @db.VarChar(11)
  //matricula String @unique @default(cuid())


  @@map("alunos")
}