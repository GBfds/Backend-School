generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Professor{
  id String @id @default(uuid())
  nome String
  telefone String
  email String @unique
  cpf String @unique

  materias Cadeira[]

  @@map("professores")
}

model Cadeira{
  id String @id @default(uuid())
  nome String
  slug String
  dt_inicio DateTime?
  dt_fim DateTime?
  carga_horaria Int

  professor Professor @relation(fields: [id_professor],references: [id])
  id_professor String

  cadeiras_abertas Cadeira_aberta[]

  @@map("cadeiras")
}

model Aluno{
  id String @id @default(uuid())
  nome String
  telefone String @db.VarChar(11)
  email String @unique 
  cpf String @unique @db.VarChar(11)
  matricula String @unique

  cadeiras_abertas Cadeira_aberta[]

  @@map("alunos")
}


model Cadeira_aberta{
  id String @id @default(uuid())

  cadeira Cadeira @relation(fields: [id_cadeira], references: [id])
  id_cadeira String

  aluno Aluno @relation(fields: [id_aluno], references: [id])
  id_aluno String

  @@map("cadeiras_abertas")
}